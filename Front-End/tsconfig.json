{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    // --- ALTERAÇÕES PRINCIPAIS AQUI ---
    "jsx": "preserve", // Mantemos "preserve" que é o padrão do Next.js
    "baseUrl": ".", // Definimos a base do projeto
    "paths": {
      "@/*": [
        "src/*"
      ] // Apontamos o alias '@/' para dentro da pasta 'src'
    },
    // --- FIM DAS ALTERAÇÕES ---
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
